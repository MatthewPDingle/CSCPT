# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_MODEL=claude-3-7-sonnet-20250219
ANTHROPIC_THINKING_BUDGET=4000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4o-mini, o1-pro, gpt-4.5-preview, o3-mini
# OPENAI_REASONING_LEVEL only applies to o3-mini (low, medium, high)
OPENAI_REASONING_LEVEL=medium
# IMPORTANT: If you're using an API key from an organization, you MUST set this to match the organization ID
# If you're using a personal API key or getting a 401 error with "mismatched_organization", try setting this to empty string
OPENAI_ORGANIZATION_ID=your_org_id_or_empty_string

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
# Default to flash model for lower-latency operations
GEMINI_MODEL=gemini-2.5-pro-preview  # Options: gemini-2.5-pro, gemini-2.5-pro-preview, gemini-2.0-flash, gemini-2.0-flash-thinking
# Optional generation parameters
# GEMINI_TEMPERATURE=0.7
# GEMINI_TOP_P=0.95
# GEMINI_TOP_K=0
# GEMINI_MAX_OUTPUT_TOKENS=1024

# Default provider setting (change as needed)
DEFAULT_LLM_PROVIDER=gemini  # or openai, anthropic

# Optional: specify a custom data directory for persistence and logs
# DATA_DIR=./data

# Optional: override the LLM messages log file path
# LLM_LOG_PATH=./data/llm_messages.log

# Optional: override the per-player logs directory
# PLAYER_LOG_PATH=./data/player_logs